{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "monthly-income-data-for-vegalite.csv"},
    "vconcat": [
        {
            "width": 907,
            "height": 600,
            "title": "Income vs Date (Scatter Plot)",
            "params": [
                {
                    "name": "brush",
                    "select": {"type": "interval", "encodings": ["x", "y"]}
                }
            ],
            "mark": "point",
            "encoding": {
                "x": {
                    "field": "Date",
                    "type": "temporal",
                    "title": "Date",
                    "scale": {
                    "domain": ["2018-12-01", "2020-1-31"]
                    }
                },
                "y": {
                    "field": "income",
                    "type": "quantitative",
                    "title": "Income (MYR)"
                },
                "color": {
                    "field": "State",
                    "type": "nominal"
                },
                "tooltip": [
                    {"field": "State"},
                    {"field": "Date", "type": "temporal", "title": "Date"},
                    {"field": "income", "type": "quantitative", "title": "Income (MYR)", "format": ".2f"}
                ]
            }
        },
        {
            "width": 907,
            "height": 600,
            "title": "Average Income by State (Bar Chart)",
            "transform": [
                {"filter": {"param": "brush"}},
                {
                    "aggregate": [{
                        "op": "mean",
                        "field": "income",
                        "as": "average_income"
                    }],
                    "groupby": ["State"]
                }
            ],
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "State",
                    "type": "nominal",
                    "title": "State",
                    "sort": "-y"
                },
                "y": {
                    "field": "average_income",
                    "type": "quantitative",
                    "title": "Average Income (MYR)"
                },
                "color": {
                    "field": "State",
                    "type": "nominal"
                },
                "tooltip": [
                    {"field": "State"},
                    {"field": "average_income", "type": "quantitative", "title": "Average Income (MYR)", "format": ".2f"}
                ]
            }
        }
    ],
    "config": {
        "view": {"stroke": null},
        "axis": {"gridColor": "#ddd"},
        "background": "#e0dcd9"
    }
}